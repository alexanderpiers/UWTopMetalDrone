<!-- Config file for control of the Top Metal II- Chip at University of Washington, CENPA -->

<!-- General Settings 
	- readOutMode : 
		- 0 : for single pixel operation
		- 1 : for full pixel detector 

--> 
<general 
	readOutMode="1" 
/>



<!-- Digitizer Settigns
	- samplingRate : in MHz
	- nSamplesPerTrigger : number of samples to save on a trigger
	- nPreTriggerSamples : number of points before the trigger to keep. Must be <nSamplesPerTrigger
	- maxNumberEventsTransferred : when reading events off the digitizer, this is the maximum number of events transferred at once
	- triggerTheshold : voltage threshold for triggering
	- triggerMode : 
		- 0 : no trigger, continous readout
		- 1 : hardware trigger on threshold
		- 2 : software trigger
 -->
<digitizer 
   samplingRate="100" 
   nSamplesPerTrigger="4096"
   nPreTriggerSamples="1000"
   maxNumberEventsTransferred="4"  
   triggerThreshold="1"
   triggerMode="1"
   numberOfBoards="1"
/>



<!-- FPGA Settings 
	- stopAddressMode :
		- 0 : STOP_ADDR disable, pixels loop in circular buffer
		- 1 : STOP_ADDR enabled
	- stopAddress : pixel number to stop at during full readout

-->
<fpga
	stopAddressMode="1"
	stopAddress="5000"
/>

<!-- Output file settings
	-filename : name of output file
 -->
<output
	filename="test.txt"
/>
